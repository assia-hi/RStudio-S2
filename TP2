#tri = order renvoie des numéros de lignes -> d'abord on trie les lignes dans une variable, puis on accèdaux lignes intéressantes  
#OU = |


setwd("C:/Users/ahidat/Downloads")
df = read.csv(file = "fao.csv", header = TRUE, sep = ";", dec = ",")

#Exo 1
nrow(df) #permet d'obtenir le n de lignes
summary(df)

#Exo 2
mean(df$Dispo_alim, na.rm=TRUE) #na.rm permet de supprimer les données N/A
sum(df$Population, na.rm = TRUE)
sd(df$Export_viande, na.rm = TRUE)
sd(df$Import_viande, na.rm = TRUE)
median(df$Prod_viande, na.rm = TRUE)
quantile(df$Dispo_alim)
quantile(df$Import_viande,seq(0,1,0.01))

#Exo 3

pays_classement_pop = order(df$Population) #classe en ordre croissant
pays_5min = head(df[ pays_classement_pop , ], n = 5) #garde les 5 premières lignes
View(pays_5min)

pays_déclassement_pop = order(df$Population, decreasing = TRUE) 
pays_5max = head(df[ pays_déclassement_pop , ], n = 5) 
View(pays_5max)

pays_classement_prod = order(df$Prod_viande, decreasing = TRUE)
pays_5max_prod = head( df[pays_classement_prod, ], n = 5)
View(pays_5max_prod)

pays_classement_import = order(df$Import_viande, decreasing = TRUE)
pays_5max_import = head( df[pays_classement_import, ], n = 5)
View(pays_5max_import)

dispo_moyenne = subset(df, Dispo_alim >= 2300)
View(dispo_moyenne)

import_dispo = subset(df, Dispo_alim > 3500 & Import_viande >= 1000)
View(import_dispo)
nrow(import_dispo)

Fr_Bel = subset(df, Nom %in% c("France", "Belgique"))
View(Fr_Bel)

#Exo 4

df$part_export = df$Export_viande/df$Prod_viande

